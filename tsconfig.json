{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "baseUrl": "./src/",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./src/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react"
  },

  "exclude": ["node_modules"],
  "include": ["src"]
}
